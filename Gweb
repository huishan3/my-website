      roast: 'æ·ºç„™',
      weight: '114g',
      expiry: '2025/10/12',
      price: 280,
      category: 'light',
      image: './image/image_1.png' 
    },
    {
      name: 'Heirloom é›™é‡å­æ°§ï¼ˆ227gï¼‰- æ‰¹æ¬¡A',
      country: 'è¡£ç´¢æ¯”äº',
      variety: 'Heirloom',
      flavor: 'èŒ‰è‰ã€æ©™èŠ±ã€èœ‚èœœã€æ°´èœœæ¡ƒ',
